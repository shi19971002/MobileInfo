<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="方向传感器" />
        <EditText
            android:id="@+id/etOrientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="陀螺仪传感器" />
        <EditText
            android:id="@+id/etGyro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="磁场传感器" />
        <EditText
            android:id="@+id/etMagnetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重力加速度传感器" />
        <EditText
            android:id="@+id/etGravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="线性加速度传感器" />
        <EditText
            android:id="@+id/etLinearAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温度传感器" />
        <EditText
            android:id="@+id/etTemerature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="光传感器" />
        <EditText
            android:id="@+id/etLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="压力传感器" />
        <EditText
            android:id="@+id/etPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:cursorVisible="false" />
    </LinearLayout>
</ScrollView>